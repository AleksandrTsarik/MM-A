.f-item
   display flex
   justify-content space-between
   align-items center
   padding 14px 24px
   border solid 1px $grayLight
   @media $phone
      flex-wrap wrap
   &:nth-child(odd)
      background $white
      border-bottom transparent
   &:nth-child(even)
      background $light
      border-bottom transparent
   &:last-child
      border-bottom solid 1px $grayLight
   &__record
      flex 0 0 20%
      max-width: 20%
      @media $phone
         order: 1
         flex: 0 0 50%
         max-width: 50%
         text-align right
      @media $afterBigPhone
         order 2
         text-align left
         flex: 0 0 100%
         max-width: 100%
         padding-left: 52px
      @media $phoneS
         margin-bottom: 12px
   &__fighter
      flex 0 0 35%
      max-width: 35%
      display flex
      align-items center
      white-space nowrap
      @media $phone
         order: 0
         flex: 0 0 50%
         max-width: 50%
      @media $afterBigPhone
         flex: 0 0 100%
         max-width: 100%
   &__country
      flex 0 0 20%
      max-width: 20%
      @media $phone
         order: 2
         flex: 0 0 50%
         max-width: 50%
         padding-left 52px
      @media $afterBigPhone
         order 1
         flex: 0 0 100%
         padding-left: 52px
         max-width: 100%
      @media $phoneS
         margin-bottom: 12px
   &__img
      width 42px
      height 42px
      border-radius 50%
      overflow hidden
      margin-right 10px

   &-block
      display flex
      align-items center
      flex 0 0 33.333%
      max-width 33.333%
   &__btn
      flex 0 0 25%
      max-width: 25%
      text-align right
      @media $phone
         order: 3
         flex: 0 0 50%
         max-width: 50%
         text-align right
      @media $afterBigPhone
         padding-left: 52px
      button
         padding 10px 46px
         font-size 18px
         color $black
         font-weight: 700
         background: $white
         border: 1px solid $grayLight
         box-sizing: border-box
         border-radius: 8px 0
         transition 0.3s
         &:hover
            //background $grayLight
            box-shadow 0 0 10px rgba($grayLight, 0.8) inset
         @media $phone
            font-size 14px
         @media $phoneS
            padding 7px 28px
            font-size 14px
.fl-list__head
   background $blueAlice
   border-radius 20px 20px 0 0

.fl-list-head
   display flex
   align-items center
   padding 10px 24px
   flex-wrap wrap
   white-space nowrap
   @media $phone
      flex-wrap wrap
      position relative
   @media $beforePhone
      display none
   &__name
      flex: 0 0 35%
      max-width 35%
      padding-left: 52px
      @media $phone
         order 0
         flex: 0 0 55%
         max-width 55%
   &__country
      flex: 0 0 20%
      max-width 20%
      @media $phone
         order 2
         flex: 0 0 55%
         max-width 55%
         padding-left: 52px
   &__record
      @media $phone
         //margin-left: auto
         //order 1
         position absolute
         right 24px
         top 50%
         transform translateY(-50%)
.f-list-head
   display flex
   align-items center
   justify-content space-between
   padding 16px 25px
   background $blueAlice
   border-radius 24px 24px 0 0
   margin-top 80px
   font-size 16px
   div
      padding 0 5px
   @media $tablet
      display none
.f-list-head--mobile
   display none
   @media $tablet
      display flex
      padding 16px 25px
      justify-content space-between
      padding 16px 25px
      background $blueAlice
      border-radius 24px 24px 0 0
      margin-top 80px
      font-size 16px
   @media $beforePhone
      display none
.f-list-head__item--mobile
   font-size 14px
   &:nth-child(1)
      flex 0 0 40%
      max-width 40%
   &:nth-child(2)
      flex 0 0 34%
      max-width 34%
   &:nth-child(3)
      flex 0 0 26%
      max-width 26%

.f-list-head__date,.f-item__date
   flex 0 0 16%
   max-width 16%
   padding 0 5px
   @media $tablet
      order 0
      flex 0 0 40%
      max-width 40%
   @media $afterBigPhone
      flex 0 0 100%
      max-width 100%
.f-list-head__tournament,.f-item__tournament
   flex 0 0 23%
   max-width 23%
   padding 0 5px
   @media $tablet
      order 3
      flex 0 0 40%
      max-width 40%
   @media $afterBigPhone
      flex 0 0 100%
      max-width 100%
      order 1
      margin-bottom: 24px
.f-list-head__opponent,.f-item__opponent
   flex 0 0 18.6%
   max-width 18.6%
   padding 0 5px
   @media $tablet
      order 1
      flex 0 0 34%
      max-width 34%
   @media $afterBigPhone
      flex 0 0 70%
      max-width 70%
      order 2
.f-list-head__result,.f-item__result
   flex 0 0 15%
   max-width 15%
   padding 0 5px
   @media $tablet
      order 4
      flex 0 0 34%
      max-width 34%
   @media $afterBigPhone
      flex 0 0 50%
      max-width 50%
.f-list-head__system,.f-item__system
   flex 0 0 16%
   max-width 16%
   padding 0 5px
   @media $tablet
      order 2
      flex 0 0 26%
      max-width 26%
   @media $afterBigPhone
      flex 0 0 30%
      max-width 30%
      order 3
      margin-left auto
      text-align right
.f-list-head__time,.f-item__time
   flex 0 0 10.7%
   max-width 10.7%
   padding 0 5px
   @media $tablet
      order 5
      flex 0 0 26%
      max-width 26%
   @media $afterBigPhone
      flex 0 0 50%
      max-width 50%
      margin-left auto
      text-align right
.f-item
   &__fighter--size
      font-size 18px
      padding 22px 24px
      @media $tablet
         flex-wrap wrap
      @media $phone
         font-size 14px
         padding 16px
   &__result
      font-weight: 700
.fl-list,.fighter-list
   @media $beforePhone
      margin-top: 40px
