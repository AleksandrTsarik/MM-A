      max-width 130px
      flex 0 0 215px
      margin-right: 16px
      padding-bottom: 16px
   &-img
      border-radius 40px 0 40px 0
      overflow hidden
      img
         border-radius 40px 0 40px 0
   &-date
      font-size 18px
      margin 24px 0
      @media $desktop
         margin 20px 0
      @media $bigPhone
         font-size 14px
      @media $phoneS
         font-size 12px
   &-text
      font-size 21px
      line-height 25px
      font-weight: 700
      margin-bottom: 24px
      @media $desktop
         margin-bottom: 20px
      @media $afterDesktop
         margin-bottom: 24px
      @media $afterBigPhone
         margin-bottom: 16px
      @media $phoneS
         font-size 16px
         line-height 19px
