.part-head
   background $alice
   color $black
   font-size 42px
   font-weight: 700
   border-radius 0 0 200px 0
   //padding 74px 0
   text-align center
   @media $desktop
      border-radius 0 0 160px 0
   @media $phone
      border-radius 0 0 100px 0
      font-size 32px
   @media $phoneS
      font-size 24px
.part-general
   margin-top: 100px
   text-align center
   background $light
   //padding 83px 0
   border-radius 0 160px 0 0
   @media $desktop
      border-radius 0 100px 0 0
      margin-top 80px
   @media $phone
      border-radius 0 80px 0 0
      margin-top 60px
   @media $phoneS
      margin-top: 40px
   &__title
      margin-bottom: 40px

.part-media
   text-align center
   background $alice
   //padding 90px 0
   border-radius 0 0 160px 0
   @media $desktop
      border-radius 0 0 100px 0
   @media $phone
      border-radius 0 0 80px 0

   &__list
      display flex
      align-items center
      justify-content center
      //margin-top: 40px
      @media $bigPhone
         flex-wrap wrap
      &-item
         flex 0 0 25%
         max-width 25%
         padding 0 15px
         @media $bigPhone
            flex 0 0 50%
            max-width 50%
            padding 20px

.part-ticket
   text-align center
   //padding 95px 0
   &__list
      display flex
      align-items center
      justify-content center
      //margin-top: 40px
      @media $bigPhone
         flex-wrap wrap
      &-item
         flex 0 0 33.333%
         max-width 33.333%
         padding 0 15px
         @media $bigPhone
            flex 0 0 50%
            max-width 50%
            padding 20px

.part-sponsor
   text-align center
   //padding 80px 0
   background $alice
   border-radius 0 0 160px 0
   @media $desktop
      border-radius 0 0 100px 0
   @media $phone
      border-radius 0 0 80px 0
   &__list
      display flex
      align-items center
      justify-content center
      //margin-top: 40px
      &-item
         flex 0 0 50%
         max-width 50%
         padding 0 15px
.part-link
   display block
   transition 0.3s
   &:hover
      filter: drop-shadow(0 0 8px rgba(black, 0.5))
.part-block-item
   padding 80px 0
   @media $phone
      padding 60px 0
   @media $phoneS
      padding 40px 0
   .title
      margin-bottom: 40px