.upgrade
   position absolute
   left 0
   right 0
   top 0
   bottom 0
   &-wrap
      width 100%
      height 100%
      background white
      position fixed
      text-align center
   &-inner
      position absolute
      padding 50px 15%
      top 50%
      transform translateY(-50%)
      //font-family: $Prosto
   &__title
      margin 20px 0 25px
      font-size 18px
   &__text
      font-size 18px
   &__link
      &-title
         margin 24px 0
      a
         padding-left 0.4em
         text-decoration underline
         color #5f3f3f

