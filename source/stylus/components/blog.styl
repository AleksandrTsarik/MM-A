.blog-pos
   max-width 1200px
   margin 0 auto
   @media $bigDesktop
      max-width 1000px
   @media $afterDesktop
      max-width 100%
.blog-head
   text-align center
   display flex
   flex-direction column
   //padding 80px 0
   //@media $phone
   //   padding 60px 0
   //@media $phone
   //   padding 40px 0
   &__date
      font-size 21px
      padding-bottom: 24px
      @media $bigPhone
         font-size 14px
         line-height 17px
   &__title
      font-size 42px
      font-weight: 700
      //padding 0 335px
      line-height 51px
      @media $phone
         font-size 32px
         line-height 38px
      @media $bigPhone
         font-size 24px
         line-height 29px
      @media $phoneS
         font-size 21px
         line-height 25px
   &__network
      @media $phone
         margin-bottom: 100px
      &-text
         font-size 14px
         padding-top: 24px
         margin-bottom: 16px
   &__img
      margin -50px auto 0
      //transform translateY(-50px)
      text-align center
      @media $phone
         //transform translateY(-100px)
         margin-top: -100px
      @media $bigPhone
         //transform translateY(-110px)
         margin-top: -110px
      @media $phoneS
         //transform translateY(-115px)
         margin-top: -115px

      img
         border-radius 80px 0 80px 0
         width 100%
         @media $phoneS
            border-radius 40px 0 40px 0

.blog-body
   &__news
      font-size 21px
      color $black
      margin-top: 80px
      line-height 28px
      @media $phone
         font-size 18px
         margin-top: 60px
      @media $phoneS
         font-size 16px
         margin-top: 40px
      &-title
         font-weight: 700
         padding-bottom: 36px
      &-text
         font-weight: 400
         margin-bottom: 50px
   &__result
      &-title
         font-weight: 700
         padding-bottom: 18px
      &-item
         padding  12px 0
   &__info
      font-size 21px
      color $black
      line-height 28px
      //padding-bottom: 80px
      &-text
         padding 12px 0
         font-size 21px
         line-height 28px
         @media $phone
            font-size 18px
         @media $phoneS
            font-size 16px
.blog-footer
   background $alice
   //margin-top: 80px
   border-radius 0 80px 0 0
   padding-bottom: 100px
   @media $beforePhone
      padding-bottom: 160px
   &-news
      position relative
      &__title
         display flex
         align-items center
         justify-content space-between
         padding 100px 0 40px 12px
         @media $desktop
            padding-top: 80px
         @media $phoneS
            padding-top: 60px

      &__link
         @media $beforePhone
            position absolute
            bottom -73px
            left 50%
            transform translateX(-50%)
      &__block
         display flex
         align-items flex-start
         justify-content space-between
         @media $afterDesktop
            flex-wrap wrap
      &__left
         flex 0 0 78%
         max-width 78%
         padding-right: 40px
         @media $afterDesktop
            flex 0 0 100%
            max-width 100%
         @media $beforePhone
            padding-right: 0
      &__right
         flex 0 0 22%
         max-width 22%
         @media $afterDesktop
            flex 0 0 100%
            max-width 100%
            margin-top: 24px
      &__list
         display flex
         margin 0 -20px
         @media $beforePhone
            flex-wrap wrap
            margin 0
      &__item
         flex 0 0 50%
         max-width 50%
         padding 0 20px
         @media $beforePhone
            flex 0 0 100%
            max-width 100%
            padding 0
         img
            width 100%
         &-inner
            border-bottom solid 1px $grayClear
            padding-bottom: 30px
            height 100%
         &-date
            font-size 14px
            padding 24px 0 16px
         &-text
            font-size 24px
            font-weight: 700
            @media $desktop
               font-size 21px
               line-height 25px

.top__bg-blog
   display flex
   flex-direction column
   align-items center
.network-blog
   display flex
   justify-content center